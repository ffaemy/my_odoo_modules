<odoo>
    <record id="view_achievement_type_tree" model="ir.ui.view">
        <field name="name">achievement.type.tree</field>
        <field name="model">achievement.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_achievement_type_form" model="ir.ui.view">
        <field name="name">achievement.type.form</field>
        <field name="model">achievement.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_achievement_type" model="ir.actions.act_window">
        <field name="name">Achievement Types</field>
        <field name="res_model">achievement.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>