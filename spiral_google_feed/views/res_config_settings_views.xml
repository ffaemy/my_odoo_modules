<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_google_feed" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.google.feed</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="sale_ebay" position="after">
                <h2>Google Feed</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            
                            <label string="Age Group" for="google_age_group"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="row m-0">
                                <field name="google_age_group"/>
                            </div>
                            
                            <label string="Colour" for="google_color"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="row m-0">
                                <field name="google_color"/>
                            </div>
                            <label string="Gender" for="google_gender"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="row m-0">                            
                                <field name="google_gender"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label string="Material" for="google_material"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="row m-0">                            
                                <field name="google_material"/>
                            </div>
                            <label string="Size" for="google_size"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="row m-0">
                                <field name="google_size"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>